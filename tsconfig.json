{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "codeceptjs"
    ]
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "vueCompilerOptions": {
    "experimentalCompatMode": 2
  }
}
